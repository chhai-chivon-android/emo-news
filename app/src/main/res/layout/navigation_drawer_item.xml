<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivDrawerItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/navigation_drawer_margin"
        android:layout_marginRight="@dimen/navigation_drawer_margin"
        android:background="@drawable/tin_tuc" />

    <TextView
        android:id="@+id/tvDrawerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin tuc"
        android:textColor="#616161"
        android:textSize="18sp" />

</LinearLayout>